<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <title>Zencode</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/home_page.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>

    <!-- Header -->
    <header>
        <h1 class="fas fa-code"></h1>
        <h1>Zencode</h1>
    </header>

    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <div id="history"></div>
        <div class="fileinputdiv">
            <input class="fileinput" type="file" id="fileInput" accept=".txt,.js,.html,.css,.json" />
            <input class="fileinputname" type="text" id="fileNameInput" placeholder="Nom du fichier..." />
        </div>
    </div>

    <!-- Bouton pour ouvrir/fermer la sidebar -->
    <div class="content" id="mainContent">

        <!-- Bouton pour ouvrir la sidebar -->
        <button class="open-btn" onclick="toggleSidebar()">
            <i class="fas fa-angle-left"></i>
        </button>

        <!-- Zone principale de Zencode -->
        <div id="main">
            <div id="editor-container"></div>
            <div id="actions">
                <button id="saveBtn">💾 Sauvegarder</button>
                <button id="resetBtn">🗑️ Réinitialiser</button>
            </div>
        </div>

    </div>

    <!-- Chargement de Monaco Editor et JS de la page -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.45.0/min/vs/loader.min.js"></script>
    <script type="module" src="../javascript/language-service.js"></script>
    <script type="module" src="../javascript/editor.js"></script>
    <script type="module" src="../javascript/file-handler.js"></script>
    <script type="module" src="../javascript/main.js"></script>


</body>
</html>
